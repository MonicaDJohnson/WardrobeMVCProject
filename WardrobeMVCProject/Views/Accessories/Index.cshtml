@model IEnumerable<WardrobeMVCProject.Accessory>

@{
    ViewBag.Title = "Index";
}
<div class="container" id="accessoriesindex">
    <h2>Index</h2>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="container">
        <div class="row">
            <div class="col">


                @Html.DisplayNameFor(model => model.Name)

            </div>
            <div class="col">

                @Html.DisplayNameFor(model => model.Photo)

            </div>
            <div class="col">

                @Html.DisplayNameFor(model => model.Type)

            </div>
            <div class="col">

                @Html.DisplayNameFor(model => model.Color)

            </div>
            <div class="col">

                @Html.DisplayNameFor(model => model.Season)

            </div>
            <div class="col">

                @Html.DisplayNameFor(model => model.Occasion)

            </div>
            <div class="col"></div>
        </div>
        <div class="container">
            @foreach (var item in Model)
            {<div class="row">
                    <div class="col">
                        @Html.DisplayFor(modelItem => item.Name)
                    </div>

                    <div class="col">
                        @Html.DisplayFor(modelItem => item.Photo)
                    </div>
                    <div class="col">
                        @Html.DisplayFor(modelItem => item.Type)
                    </div>
                    <div class="col">
                        @Html.DisplayFor(modelItem => item.Color)
                    </div>
                    <div class="col">
                        @Html.DisplayFor(modelItem => item.Season)
                    </div>
                    <div class="col">
                        @Html.DisplayFor(modelItem => item.Occasion)
                    </div>
                    <div class="col">
                        <button class="button" id="accindexbutton">   @Html.ActionLink("Edit", "Edit", new { id = item.AccessoriesID }) |</button>
                        @Html.ActionLink("Details", "Details", new { id = item.AccessoriesID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AccessoriesID })
                    </div>

                </div>
            }
        </div>
    </div>
</div>
                    @Html.DisplayFor(modelItem => item.Occasion)

                </div>
                <div class="col">

                    <button class="button" id="botindexbutton"> @Html.ActionLink("Edit", "Edit", new { id = item.BottomsID }) |</button>
                    @Html.ActionLink("Details", "Details", new { id = item.BottomsID }) |

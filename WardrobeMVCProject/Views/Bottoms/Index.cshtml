@model IEnumerable<WardrobeMVCProject.Bottom>

@{
    ViewBag.Title = "Index";
}
<div class="container" id="bottomsindex">
    <h2>Index</h2>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col"></div>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="container">
        <div class="row">
            <div class="col">


                @Html.DisplayNameFor(model => model.Name)

            </div>
            <div class="col">

                @Html.DisplayNameFor(model => model.Photo)

            </div>
            <div class="col">

                @Html.DisplayNameFor(model => model.Type)

            </div>
            <div class="col">

                @Html.DisplayNameFor(model => model.Color)

            </div>
